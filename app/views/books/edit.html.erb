	<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
	<% end %>

<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

<!-- もし、エラーが発生した場合の構文 -->
	<% if @book.errors.any? %>
		<p><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
		<ul>
			<%= @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

	<p>Title</p>
	<%= f.text_field :title %>
	<p>Body</p>
	<%= f.text_area :body %>
	<%= f.submit 'Update Book' %>
<% end %>

<div>
	<p>
		<%= link_to 'Show', book_path(@book.id) %>
		|
		<%= link_to 'Back', books_path %>
	</p>
</div>

